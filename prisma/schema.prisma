// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                    String      @id @default(cuid())
  name                  String?
  email                 String?     @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  passwordResetToken    String?     @unique
  passwordResetTokenExp DateTime?
  role                  Role        @default(COMPLAINANT)
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @default(now()) @updatedAt
  accounts              Account[]
  sessions              Session[]
  createdComplaints     Complaint[] @relation("CreatedBy")
  updatedComplaints     Complaint[] @relation("UpdatedBy")
  assignedComplaints    Complaint[] @relation("AssignedTo")
  approvedComplaints    Complaint[] @relation("ApprovedBy")
  createdFIRs           FIR[]       @relation("FIRCreatedBy")
  updatedFIRs           FIR[]       @relation("FIRUpdatedBy")
  createdComments       Comment[]   @relation("CommentCreatedBy")
  updatedComments       Comment[]   @relation("CommentUpdatedBy")
}

enum Role {
  COMPLAINANT
  FIELD_OFFICER
  DCP
  ACP
  COMMISSIONER
  SUPER_ADMIN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum NoticeStatus {
  NOT_REQUIRED
  NOT_ISSUED
  ISSUED
  REPLIED
  OVERDUE
  PENDING
  SENT
  RESPONDED
}

model Commissionerate {
  id          Int         @id @default(autoincrement())
  name        String
  code        String?     @unique
  complaints  Complaint[]
  dcpZones    DCPZone[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model DCPZone {
  id                Int             @id @default(autoincrement())
  name              String
  code              String?         @unique
  commissionerateId Int
  commissionerate   Commissionerate @relation(fields: [commissionerateId], references: [id])
  complaints        Complaint[]
  municipalZones    MunicipalZone[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model MunicipalZone {
  id            Int         @id @default(autoincrement())
  name          String
  code          String?     @unique
  dcpZoneId     Int
  dcpZone       DCPZone     @relation(fields: [dcpZoneId], references: [id])
  complaints    Complaint[]
  acpDivisions  ACPDivision[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model ACPDivision {
  id               Int            @id @default(autoincrement())
  name             String
  code             String?        @unique
  municipalZoneId  Int
  municipalZone    MunicipalZone  @relation(fields: [municipalZoneId], references: [id])
  complaints       Complaint[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model Complaint {
  id                                    Int             @id @default(autoincrement())
  complaintId                           String?         @unique
  complaintUniqueId                     String?         @unique
  dateOfApplicationReceived             DateTime?
  complaintCategoryReceivedFrom         String?
  natureOfComplaint                     String?
  placeOfComplaint                      String?
  addressOfComplaintPlace               String?
  nameOfTheComplainant                  String?
  phoneOfTheComplainant                 String?
  addressOfTheComplainant               String?
  briefDetailsOfTheComplaint            String?
  detailsOfRespondent                   String?
  complaintPriority                     ComplaintPriority @default(NORMAL)
  actionTakenBriefDetails               String?
  legalIssues                           String?
  anyLegalIssues                        YesNo            @default(NO)
  firRegistered                         YesNo            @default(NO)
  firNumber                             String?
  firDetails                            String?
  investigationOfficerReviewComments    String?
  investigationOfficerReviewDate        DateTime?
  finalStatus                           ComplaintStatus?
  sourceOfComplaint                     String?
  modeOfComplaint                       String?
  noticeStatus                          NoticeStatus     @default(NOT_REQUIRED)
  peReport                              String?
  fieldVisitDate                        DateTime?
  peStatus                              String?

  // Notice fields
  firstNoticeNumber                     String?
  firstNoticeDate                       DateTime?
  firstNoticeStatus                     NoticeStatus     @default(NOT_ISSUED)
  secondNoticeNumber                    String?
  secondNoticeDate                      DateTime?
  secondNoticeStatus                    NoticeStatus     @default(NOT_ISSUED)
  noticeApprovalStatus                  ApprovalStatus   @default(PENDING)
  approvedById                          String?
  approvedBy                            User?           @relation("ApprovedBy", fields: [approvedById], references: [id])
  approvalDate                          DateTime?

  // Relations
  commissionerateId                     Int?
  commissionerate                       Commissionerate? @relation(fields: [commissionerateId], references: [id])
  dcpZoneId                             Int?
  dcpZone                               DCPZone?         @relation(fields: [dcpZoneId], references: [id])
  municipalZoneId                       Int?
  municipalZone                         MunicipalZone?   @relation(fields: [municipalZoneId], references: [id])
  acpDivisionId                         Int?
  acpDivision                           ACPDivision?     @relation(fields: [acpDivisionId], references: [id])

  createdById                           String
  createdBy                             User            @relation("CreatedBy", fields: [createdById], references: [id])
  updatedById                           String?
  updatedBy                             User?           @relation("UpdatedBy", fields: [updatedById], references: [id])
  assignedToId                          String?
  assignedTo                            User?           @relation("AssignedTo", fields: [assignedToId], references: [id])

  createdAt                             DateTime        @default(now())
  updatedAt                             DateTime        @updatedAt

  attachments                           ComplaintAttachment[]
  firs                                  FIR[]
  comments                              Comment[]

  @@map("complaints")
}

model ComplaintAttachment {
  id           Int       @id @default(autoincrement())
  complaintId  Int
  complaint    Complaint @relation(fields: [complaintId], references: [id], onDelete: Cascade)
  filename     String
  url          String
  mimeType     String?
  size         Int?
  createdAt    DateTime  @default(now())
}

enum FIRStatus {
  REGISTERED
  UNDER_INVESTIGATION
  CHARGESHEET_FILED
  COURT_PROCEEDINGS
  CLOSED
  WITHDRAWN
}

enum ComplaintPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum ComplaintStatus {
  PENDING
  UNDER_REVIEW_DCP
  UNDER_REVIEW_ACP
  UNDER_REVIEW_COMMISSIONER
  INVESTIGATION_IN_PROGRESS
  LEGAL_REVIEW
  RESOLVED
  REJECTED
  CLOSED
}


enum YesNo {
  YES
  NO
}

model FIR {
  id                    Int       @id @default(autoincrement())
  firNumber             String    @unique
  dateOfRegistration    DateTime
  policeStation         String
  investigatingOfficer  String?
  investigatingOfficerContact String?
  sectionsApplied       String?   // IPC sections
  status                FIRStatus @default(REGISTERED)
  details               String?
  remarks               String?

  // Relations
  complaintId           Int
  complaint             Complaint @relation(fields: [complaintId], references: [id], onDelete: Cascade)

  createdById           String
  createdBy             User      @relation("FIRCreatedBy", fields: [createdById], references: [id])
  updatedById           String?
  updatedBy             User?     @relation("FIRUpdatedBy", fields: [updatedById], references: [id])

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("firs")
}

model Comment {
  id          Int      @id @default(autoincrement())
  content     String
  isInternal  Boolean  @default(false) // For internal notes vs public comments

  // Relations
  complaintId Int
  complaint   Complaint @relation(fields: [complaintId], references: [id], onDelete: Cascade)

  parentId    Int?     // For threaded replies
  parent      Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentReplies")

  createdById String
  createdBy   User     @relation("CommentCreatedBy", fields: [createdById], references: [id])
  updatedById String?
  updatedBy   User?    @relation("CommentUpdatedBy", fields: [updatedById], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("comments")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
